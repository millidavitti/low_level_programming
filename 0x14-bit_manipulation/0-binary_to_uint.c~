#include "main.h"
#include <string.h>
#include <math.h>
/**
 *charToInt - char to int
 *@c: character
 *Return: int
 */
int charToInt(char c)
{
return (c - '0');
}
/**
 *binary_to_uint - converts a binary number to an unsigned int
 *@b: a string of 0 and 1 chars
 *Return: u..d int or null
 */ 

unsigned int binary_to_uint(const char *b) {
int *bytes, i, j, sum, start, len;
char *new_str;
len = strlen(b);
start = 0;
for (i = 0; i < len; i++)
if (charToInt(b[i]) == 1) {
start = i;
break;
}

new_str = malloc(sizeof new_str * (len - start));
if (!new_str)
return (-1);

for (i = start, j=0; b[i]; i++,j++)
new_str[j] = b[i];
new_str[j] = '\0';

bytes = malloc(sizeof bytes * strlen(new_str));
if (!bytes)
return (-1);

for (i = strlen(new_str) - 1, j = 0; i >= 0; i--, j++)
bytes[j] = (int)pow(2, i);
sum = 0;

for (i = 0; bytes[i]; i++) {
if (charToInt(new_str[i]) == 1)
sum += bytes[i];
else if (charToInt(new_str[i]) != 0) {
sum = 0;
break;
}
}
return (sum);
}
